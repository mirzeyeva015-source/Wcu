#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *file;
    char filename[256];
    int ch;

    int letters = 0;
    int words = 0;
    int sentences = 0;
    int inWord = 0;

    printf("Faylin adini daxil edin: ");
    scanf("%255s", filename);

    file = fopen(filename, "r");
    if (file == NULL) {
        printf("Fayl acila bilmedi!\n");
        return 1;
    }

    while ((ch = fgetc(file)) != EOF) {
        if (isalpha(ch)) {
            letters++;
            if (!inWord) {
                inWord = 1;
                words++;
            }
        } else {
            inWord = 0;
        }

        if (ch == '.' || ch == '!' || ch == '?') {
            sentences++;
        }
    }

    fclose(file);

    printf("Herflerin sayi: %d\n", letters);
    printf("Sozlerin sayi: %d\n", words);
    printf("Cumlelerin sayi: %d\n", sentences);

    return 0;
}
